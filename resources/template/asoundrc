%default_device%

# Re-mapping 5.1 channels for Steamlink
pcm.!surround51 {
  type route
  slave.pcm "%device%"
  ttable {
    0.%alsa_surround_51_0%= 1
    1.%alsa_surround_51_1%= 1
    2.%alsa_surround_51_2%= 1
    3.%alsa_surround_51_3%= 1
    4.%alsa_surround_51_4%= 1
    5.%alsa_surround_51_5%= 1
  }
}

